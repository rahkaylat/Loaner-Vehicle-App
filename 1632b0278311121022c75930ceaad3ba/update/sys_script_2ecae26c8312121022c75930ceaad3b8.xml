        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Add your code here

    var lvServ = new GlideRecord('x_1515300_lva_vehicle_servicing'); // Create a variable for the current vehicle status field
    lvServ.addQuery('vehicle_tracker', 'current.sys_id');
    lvServ.addQuery('ticket_status', 'open');
    lvServ.query();

    //if no matching records are found from the previous query move on with the script
    if (!lvServ.next()) {
        var newTicket = new GlideRecord('x_1515300_lva_vehicle_servicing');
        var openingDate = new GlideDate();

        newTicket.vehicle_tracker = current.sys_id;
        newTicket.vehicle = current.vehicle;
        newTicket.vehicle_status = 'In Service';
        newTicket.date_sent_for_servicing = openingDate.getValue();
        newTicket.ticket_status = 'open';

        newTicket.insert();
    }



})(current, previous);]]></script>
