        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Create a variable for the current sys_id of the vehicle tracker record
    var trackerSys = current.vehicle_tracker;

    //Create an “if statement” for the variable previously created
    if (trackerSys) {

        //Create a variable for a new GlideRecord on the vehicle tracker table
        var trackerGR = new GlideRecord('x_1515300_lva_vehicle_tracker');

        if (trackerGR.get(trackerSys)) {

            // Set the value of the vehicle status field on the GlideRecord to match Servicing Ticket
            trackerGR.setValue('vehicle_status', current.vehicle_status);

            //Set the value of the tracker status field to closed on the GlideRecord
            trackerGR.setValue('tracker_status', 'Closed');

            trackerGR.update();





        }



    }




})(current, previous);]]></script>
